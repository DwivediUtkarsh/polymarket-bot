{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "@next_public_api_url",
    "NEXT_PUBLIC_POLYMARKET_API_URL": "@next_public_polymarket_api_url",
    "NEXT_PUBLIC_WS_URL": "@next_public_ws_url",
    "SESSION_SECRET": "@session_secret",
    "REDIS_URL": "@redis_url",
    "NODE_ENV": "production"
  },
  "functions": {
    "pages/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "framework": "nextjs"
} 